								</script>

								<div id="inscription-gestion">
									{% if not event.finished %}
										{{ easy_include('formalites-gestion-des-inscrits', 'vide') }}
									{% else %}
										{{ easy_include('formalites-gestion-des-inscrits-evt-passe', 'vide') }}
									{% endif %}

									<br/>

									<form action="{{ path('sortie_update_inscription', { id: event.id })}}" method="post" class="loading">
										<input type="hidden" name="csrf_token" value="{{ csrf_token('sortie_update_inscriptions') }}"/>

										<table class="datatable">
											<thead>
												<tr>
													<th width='30%'>Nom / Pseudo</th>
													<th width='15%'>Statut</th>
													<th width='15%'>Rôle</th>
													<th width='10%'>Date</th>
													<th>Contact</th>
												</tr>
											</thead>
											<tbody>
												{#                                // PARTICIPANTS - EMPIETEMENTS : VÉRIFICATION DE (PRÉ)INSCRIPTIONS À D'AUTRES SORTIES DANS LE MEME TIMING#}
												{#                                // création du tableau "empiètement" pour chaque user#}
												{#                                $row['empietements'] = empietement_sortie($row['id_user'], $evt);#}

													{% for participant in event.participants(null, null) %}
														<tr class="status{{ participant.status }}" style="color:gray; font-size:10px;"> <td>
															{{ participant.user.lastname | upper }},
															{{ participant.user.firstname | capitalize }}<br/>
															<a href="/includer.php?p=includes/fiche-profil.php&amp;id_user={{ participant.user.id }}" class="fancyframe userlink">{{ participant.user.nickname }}</a>

															{% if participant.user.doitRenouveler %}
																<img src="/img/base/delete.png" title="licence expirée" style="margin-bottom:-4px;">
															{% endif %}
														</td>

														<td class="mini joinlabels status{{ participant.status }}">

															{% set disable_waiting = true %}
															{% set disable_accepted = true %}
															{% set disable_refused = true %}
															{% set disable_absent = true %}
															{% set disable_unsubscribe = true %}

															{% if allowed('evt_joining_accept') or allowed('evt_join_doall') %}
																{% set disable_waiting = false %}
																{% set disable_accepted = false %}
																{% set disable_absent = false %}
															{% endif %}
															{% if allowed('evt_joining_refuse') or allowed('evt_join_doall') %}
																{% set disable_refused = false %}
															{% endif %}
															{% if allowed('evt_unjoin_notme') or allowed('evt_join_doall') %}
																{% set disable_unsubscribe = false %}
															{% endif %}

															{% if empietements[participant.user.id] is defined %}
																<div class="empietements">
																	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Attention au timing :</b>
																	{% for empietement in empietements[participant.user.id] %}
																		{% if empietement.status == constant('App\\Entity\\EvtJoin::STATUS_NON_CONFIRME') %}
																			<br/>- Adhérent pré-inscrit sur
																			<br/><a href="{{ path('sortie', { code : empietement.event.code, id: empietement.event.id }) }}">{{ empietement.event.titre }}</a>
																		{% elseif empietement.status == constant('App\\Entity\\EvtJoin::STATUS_VALIDE') %}
																			<br/>- Adhérent
																			<span style="color:red">confirmé</span>
																			sur
																			<br/>
																			<br/><a href="{{ path('sortie', { code : empietement.event.code, id: empietement.event.id }) }}">{{ empietement.event.titre }}</a>
																		{% endif %}
																	{% endfor %}
																</div>
															{% endif %}

															{% if participant.role != 'encadrant' %}
																<span style="display:none">{{ participant.status }}</span>
																<input type="hidden" name="id_evt_join[]" value="{{ participant.id }}"/>

																{% if participant.isStatusEnAttente %}
																	<label for="join_{{ participant.id }}_0">
																		<input checked="checked" {{ disable_waiting ? 'disabled="disabled"' : '' }} type="radio" name="status_evt_join_{{ participant.id }}" id="join_{{ participant.id }}_0" value="0"/>
																		En attente
																	</label>
																{% endif %}

																{% if (event.finished and participant.isStatusValide) or not event.finished %}
																	<label for="join_{{ participant.id }}_1">
																		<input {{ participant.isStatusValide ? 'checked="checked"' : '' }} {{ disable_accepted ? 'disabled="disabled"' : '' }} type="radio" name="status_evt_join_{{ participant.id }}" id="join_{{ participant.id }}_1" value="1"/>
																		Accepté
																	</label>
																{% endif %}

																{% if event.finished and not participant.isStatusRefuse %}
																	<label for="join_{{ participant.id }}_3">
																		<input {{ participant.isStatusAbsent ? 'checked="checked"' : '' }} {{ disable_absent ? 'disabled="disabled"' : '' }} type="radio" name="status_evt_join_{{ participant.id }}" id="join_{{ participant.id }}_3" value="3"/>
																		Absent
																	</label>
																{% endif %}

																{% if (event.finished and participant.isStatusRefuse) or not event.finished %}
																	<label for="join_{{ participant.id }}_2">
																		<input {{ participant.isStatusRefuse ? 'checked="checked"' : '' }} {{ disable_refused ? 'disabled="disabled"' : '' }} type="radio" name="status_evt_join_{{ participant.id }}" id="join_{{ participant.id }}_2" value="2"/>
																		Refusé
																	</label>
																{% endif %}

																{% if not event.finished %}
																	<label for="join_{{ participant.id }}_-1">
																		<input name="status_evt_join_{{ participant.id }}" {{ disable_unsubscribe ? 'disabled="disabled"' : '' }} type="radio" id="join_{{ participant.id }}_-1" value="-1"/>
																		Désinscrire
																	</label>
																{% endif %}

															{% endif %}

														</td>
														<td class="mini">
															{% if participant.user.nomade %}
																<br/>
																<img src="/img/base/bullet_error.png" alt="!" title="Attention. Ne reçoit pas d'e-mail" style="vertical-align:top"/>
																<br/>
															{% elseif participant.isRoleManuel or participant.isRoleInscrit or participant.isRoleBenevole %}
																{% if participant.isRoleManuel %}
																	<label style="display:block; white-space:nowrap;" for="role_join_{{ participant.id }}_m">
																		<input checked="checked" name="role_evt_join_{{ participant.id }}" type="radio" id="role_join_{{ participant.id }}_m" value="manuel"/>
																		Manuel
																	</label>
																{% endif %}
																<label style="display:block; white-space:nowrap;" for="role_join_{{ participant.id }}_i">
																	<input {% if participant.isRoleInscrit %} checked="checked" {% endif%} name="role_evt_join_{{ participant.id }}" type="radio" id="role_join_{{ participant.id }}_i" value="inscrit"/>
																	Inscrit
																</label>
																<label style="display:block; white-space:nowrap;" for="role_join_{{ participant.id }}_b">
																	<input {% if participant.isRoleBenevole %} checked="checked" {% endif%} name="role_evt_join_{{ participant.id }}" type="radio" id="role_join_{{ participant.id }}_b" value="benevole"/>
																	Bénévole
																</label>
															{% else %}
																{{ participant | participant_role_name }}
															{% endif %}

														</td>
														<td style="white-space:nowrap">
															<span style="display:none">{{ participant.tsp }}</span>
															{{ participant.tsp | date('d/m') }}<br/>
															{{ participant.tsp | date('à H:i') }}
														</td>
														<td>
															<a href="mailto:{{ participant.user.email }}">{{ participant.user.email | u.truncate(15, '...') }}</a><br/>
															{{ participant.user.tel }}<br/>
															{{ participant.user.tel2 }}
														</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>

										<!-- stats affichées -->
										<p>Stats :</p>
										<ul>
											<li>
												<b id="nDemandes">{{ event.participants(null, null) | length }}</b>
												demande(s), dont
												<b id="nAcceptees">{{ event.participants(null, constant('App\\Entity\\EvtJoin::STATUS_VALIDE')) | length }}</b>
												acceptée(s), et
												<b id="nRefusees">{{ event.participants(null, constant('App\\Entity\\EvtJoin::STATUS_REFUSE')) | length }}</b>
												refusée(s).
											</li>
											<li>
												<b id="nRefusees">{{ event.participants(null, constant('App\\Entity\\EvtJoin::STATUS_ABSENT')) | length }}</b>
												absent(s).
											</li>
										</ul>

										<br style="clear:both"/>

