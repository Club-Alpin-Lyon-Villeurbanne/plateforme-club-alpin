<footer id="mainfooter">
    <!-- My footer -->
    <div class="tiers-footer" style="font-size: 0.8rem; line-height:14px">
        {{ easy_include('mainfooter-1', '') }}

        <div style="width:47%; float:left; white-space:nowrap; overflow:hidden;">
            {% set commissions = list_commissions() %}
            {% set break = ((commissions | length / 2) | round(0, 'ceil')) - 1 %}
            {% for commission in commissions %}
                <a href="/accueil/{{ commission.code }}.html" title="">> {{ commission.title }}</a>

                {% if loop.index0 == break %}
                    </div><div style="width:47%; float:right; white-space:nowrap; overflow:hidden;">
                {% else %}
                    <br />
                {% endif %}
            {% endfor %}
        </div>
        <br style="clear:both" />

        <!-- lien vers la page dédiée aux responsables -->
        <div class="mini" style="padding-top:10px">
            <a style="color:gray" href="/responsables.html" title="">&gt; Voir les responsables par commission</a>
        </div>
    </div>

    <div class="tiers-footer">
        {{ easy_include('mainfooter-2', '') }}
    </div>

    <div class="tiers-footer">
        {{ easy_include('mainfooter-3', '') }}
        <div class="">
            <hr />
            Version du site : <a href="https://github.com/Club-Alpin-Lyon-Villeurbanne/plateforme-club-alpin/commit/{{ site_version }}" target="_blank">{{ site_version|slice(0, 7) }}</a>
        </div>
        <div class="tw-absolute tw-bottom-2.5 tw-right-[30px]">Powered by <a href="https://www.clevercloud.fr" target="_blank" rel="noopener">Clever Cloud</a></div>
    </div>

    <br style="clear:both" />

    <a style="display: none;" onClick="document.body.scrollTop = document.documentElement.scrollTop = 0;" class="scrollup">Remonter</a>

</footer>

