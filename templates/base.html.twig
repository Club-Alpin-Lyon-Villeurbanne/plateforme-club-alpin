<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %} - {{ sitename }}</title>
        <base href="{{ url('legacy_root') }}" />
        <meta name="description" content="{% block meta_description %}Site officiel du {{ sitename }} : activités sportives été et hiver, alpinisme, randonnée, ski, refuges...{% endblock %}">
        <meta name="viewport" content="width=1200">
        <link rel="shortcut icon" href="/favicon.ico" />

        <meta property="og:title" content="{{ sitename }}" />
        <meta property="og:description" content="{{ block('meta_description') }}" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="{{ app.request.uri }}" />
        <meta property="og:site_name" content="{{ sitename }}" />

        {% if google_site_verification != "" %}
        <meta name="google-site-verification" content="{{ google_site_verification }}" />
        {% endif %}

        <link rel="alternate" type="application/rss+xml" title="RSS" href="{{ url_site }}/rss.xml?mode=articles" />

        {% block stylesheets %}
            {{ encore_entry_link_tags('caf-assets') }}
            {{ encore_entry_link_tags('tailwind') }}
            <!-- css COMMUNS SCREEN + PRINT -->
            {{ encore_entry_link_tags('legacy-style1') }}
            {{ encore_entry_link_tags('legacy-base') }}
            {{ encore_entry_link_tags('legacy-common') }}
            {{ encore_entry_link_tags('legacy-print', attributes={
                media: 'print'
            }) }}

            <link rel="stylesheet" href="/fonts/stylesheet.css" type="text/css" />
            <link rel="stylesheet" href="/tools/fancybox/jquery.fancybox.css" type="text/css" />
        {% endblock %}

        

        {% block scripts %}
            <script type="text/javascript">
                var p1='{{ p1 | default('') }}';
                var p2='{{ p2 | default('') }}';
                var p3='{{ p3 | default('') }}';
                var p4='{{ p4 | default('') }}';
            </script>
            <!-- html5shiv -->
            <script type="text/javascript" src="/js/html5shiv.js"></script>
            <!-- jquery -->
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
            <script>window.jQuery || document.write('<script src="/js/jquery-1.8.min.js">\x3C/script>')</script>
            <script type="text/javascript" src="/js/jquery.easing.1.3.js"></script>
            <script type="text/javascript" src="/js/jquery.pngFix.pack.js"></script>
            <script type="text/javascript" src="/js/jquery.color.js"></script>
            <!-- fancybox -->
            <script type="text/javascript" src="/tools/fancybox/jquery.fancybox.pack.js"></script>
            <!-- script persos -->
            <script src="/js/fonctions.js" type="text/javascript"></script>
            <!-- script scroll up -->
            <script src="/js/scrollup.js" type="text/javascript"></script>

            <script src="/js/onready.js" type="text/javascript"></script>
            <script src="/js/onready-site.js" type="text/javascript"></script>
            <script src="https://cdn.jsdelivr.net/npm/add-to-calendar-button@2" async defer></script>

            {{ encore_entry_script_tags('caf-assets') }}
            {{ javascriptGlobals() }}
        {% endblock %}
        
        {% if display_banner %}
			<style>
				body {
					padding-top: 30px;
				}
				#env-banner {
					position: fixed;
					top: 0;
					left: 0;
					width: 100%;
					background-color: #f44336;
					color: #ffffff;
					text-align: center;
					z-index: 9999;
					padding: 10px 0;
					font-size: 16px;
					font-weight: bold;
				}
			</style>
		{% endif %}

    </head>
    <body>
    	{% if display_banner %}
			<div id="env-banner">
				<p>Attention, vous vous trouvez sur un site de test. Veuillez
					<a href="https://clubalpinlyon.fr">cliquer ici pour accéder au site de production</a>.</p>
			</div>
		{% endif %}
        <div id="container">
            <div id="siteHeight">
                {% include 'header.html.twig' %}
                <div id="bigfond" style="background-image:url({{ fond_commission(current_commission is defined ? current_commission : null) }});"></div>
                <div id="main" class="bigoo" role="main">
                    <div id="left1">
                        {% block body %}{% endblock %}
                    </div>
                    {% include 'right-column.html.twig' %}
                    <br style="clear:both" />
                </div>
                {% include 'footer.html.twig' %}
            </div>
        </div>
        {% block javascripts %}
            <script src="https://www.google.com/recaptcha/api.js?render={{ recaptcha.site_key }}"></script>
        {% endblock %}
        {% block trackers %}
            {% if analytics_account != "" %}
            <!-- Google tag (gtag.js) -->
            <script async src="https://www.googletagmanager.com/gtag/js?id={{ analytics_account | e('js') }}"></script>
            <script>
                window.dataLayer = window.dataLayer || [];
                function gtag(){dataLayer.push(arguments);}
                gtag('js', new Date());

                gtag('config', '{{ analytics_account | e('js') }}');
            </script>
            {% endif %}
        {% endblock %}
    </body>
</html>
